{
  "name": "QuickThemes",
  "version": "1.0",
  "description": "Apply themes with ease",
  "manifest_version": 2,
  "icons": { "16": "images/qt16.png",
             "64": "images/qt64.png",
            "128": "images/qt128.png" },
  "browser_action": {
              "default_icon": "images/qt128.png",
              "default_popup": "popup.html"
            },
  "permissions": [
              "storage"
    ],
  "content_scripts": [ {
    "matches": ["https://open.spotify.com/*", "https://play.spotify.com/*", "https://www.youtube.com/*"],
    "js": ["quickthemes.js"],
    "css" : ["themes/retrowave/spotify.css", "themes/retrowave/youtube.css"]
  } ]
}
